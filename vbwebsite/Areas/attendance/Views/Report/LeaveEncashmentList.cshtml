@model List<vb.Data.LeaveEncashmentListResponse>
@using vb.Data.ViewModel

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Leave Encashment List</h3>
    </div>
    <div class="box-body">
        <table id="ListDataTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Sr.No</th>
                    <th>Employee Name</th>
                    <th>Total</th>
                    <th>Closing Leaves</th>
                    <th>Leave Encashment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RowNumber</td>
                        <td>@item.FullName</td>
                        <td>@item.TotalLeaveEnhancement</td>
                        <td>@item.ClosingLeaves</td>
                        <td>@item.LeaveEncashment</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


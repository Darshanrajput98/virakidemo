@model List<vb.Data.MonthlyAttendanceList>
@using vb.Data.ViewModel

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Monthly Attendance List</h3>
    </div>
    <div class="box-body">
        <table id="ListDataTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Sr.No</th>
                    <th>Employee Name</th>
                    <th>Present</th>
                    <th>Absent</th>
                    <th>Sunday</th>
                    <th>Holiday</th>
                    <th>OT</th>
                    <th>Vehicle No Of Days Count</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RowNumber</td>
                        <td>@item.EmployeeName</td>
                        <td>@item.Present</td>
                        <td>@item.Absent</td>
                        <td>@item.Sunday</td>
                        <td>@item.Holiday</td>
                        <td>@item.OTHours</td>
                        <td>@item.VehicleNoOfDaysCount</td>
                    </tr>
                }
                @if (Model.Count > 0)
                {
                    <tr style="font-weight:bold">
                        <td colspan="1">Total :</td>
                        <td></td>
                        <td>@Model[0].sumPresent</td>
                        <td>@Model[0].sumAbsent</td>
                        <td>@Model[0].sumSunday</td>
                        <td>@Model[0].sumHoliday</td>
                        <td>@Model[0].sumTotalOTHrs</td>
                        <td>@Model[0].sumVehicleNoOfDaysCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $('#ListDataTable').DataTable({
        'paging': true,
        'lengthChange': true,
        'searching': true,
        'ordering': false,
        'info': true,
        'autoWidth': false
    });
</script>


@{
    ViewBag.Title = "SearchViewBillWiseOrderList";
    Layout = "~/Areas/export/Views/Shared/_exportlayout.cshtml";
}

<div class="box">
    <div class="box-header text-center">
        <h3 class="box-title">Order List</h3>
    </div>
    <div class="box-body">
        <div class="col-md-6">
            <div class="form-group">
                <label for="OrderDate" class="col-sm-4 control-label">Order Date </label>
                <div class="col-sm-8">
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" class="form-control pull-right datepicker" id="OrderDate" tabindex="1" autocomplete="off">
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer ">
            <div class="pull-right">
                <button type="button" id="btnsearch" class="btn btn-info" tabindex="2">Search</button>
                <button type="button" id="btnclear" class="btn btn-info" tabindex="3">Clear</button>
            </div>
        </div>
        <div id="lstcase">
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function () {

        $("#btnsearch").click(function () {
            debugger;
            var OrderDate = $("#OrderDate").val();
            $.ajax({
                url: '@Url.Action("ViewBillWiseOrderList")',
                type: 'POST',
                data: { 'OrderDate': OrderDate },
                cache: false,
            }).done(function (result) {

                $('#lstcase').html(result);
            });
        });



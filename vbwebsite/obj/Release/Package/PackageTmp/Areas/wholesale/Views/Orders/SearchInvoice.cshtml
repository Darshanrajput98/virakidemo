        $("#txtFrom").val("");
        $("#txtTo").val("");
        $("#UserID").value = "";
        var model = new Object();
        model.UserID = "0";
        model.CustomerID = "0";
        model.From = "";
        model.To = "";
        model.Isclear = "true";
        $.ajax({
            url: '@Url.Action("ViewOrderList")',
            type: 'POST',

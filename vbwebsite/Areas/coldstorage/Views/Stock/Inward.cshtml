                        if (td.innerText.trim() != '') {
                            //debugger
                            TotalAmountGrandTotal = TotalAmountGrandTotal + parseFloat(td.innerText);
                            $('#lblTotalAmountGrandTotal').html(parseFloat(TotalAmountGrandTotal).toFixed(2));
                        }
                    }
                }
            });
        });
    }

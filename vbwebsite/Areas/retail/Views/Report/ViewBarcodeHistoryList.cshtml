@model List<vb.Data.BarcodeHistoryListResponse>
@using vb.Data.ViewModel

<div class="box">
    <div class="box-header text-center">
        <h3 class="box-title">Barcode History List</h3>
    </div>
    <div class="box-body table-scrollable1">
        <table id="ListDataTable" class="table table-bordered table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Product Name</th>
                    <th>No Of Barcodes</th>
                    <th>Godown</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.CreatedDate
                        </td>
                        <td>
                            @item.ProductName
                        </td>
                        <td>
                            @item.NoOfBarcodes
                        </td>
                        <td>
                            @item.GodownName
                        </td>
                    </tr>
                }
                @if (Model.Count > 0)
                {
                    <tr style="font-weight:bold">
                        <td colspan="2" style="text-align:right">
                             Total :
                        </td>
                        <td>
                            @Model[0].TotalNoOfBarcode
                        </td>
                        <td>
                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


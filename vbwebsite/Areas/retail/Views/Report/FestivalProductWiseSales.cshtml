        $("#btnexport").click(function () {
            debugger;
            var model = new Object();
            model.BeforeDays = $("#BeforeDays").val();
            model.AfterDays = $("#AfterDays").val();
            model.StartDate = $("#txtFrom").val();
            model.EndDate = $("#txtTo").val();

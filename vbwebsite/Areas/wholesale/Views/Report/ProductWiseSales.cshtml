        var fproductid = '@Session["fprproductid"]';
        var fcategoryid = '@Session["fprcategoryid"]';
        var fareaid = '@Session["fprareaid"]';
        if (fcustid != "" || ftxtfrom != "" || ftxtto != "" || fuid != "" || fproductid != "" || fcategoryid != "" || fareaid != "") {

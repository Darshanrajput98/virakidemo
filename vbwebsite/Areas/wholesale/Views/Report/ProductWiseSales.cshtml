            model.AreaID = $("#AreaID").val();
            model.ProductCategoryID = $("#ProductCategoryID").val();
            model.ProductID = $("#ProductID").val();
            model.UserID = $("#UserID").val();
            model.CustomerName = $("#CustomerID option:selected").text();
